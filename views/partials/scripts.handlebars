<script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>

<script>
    var socket = io.connect();

    socket.on('webhook', function(hook){

        if(hook.action === 'closed') {
            console.log('Skalman!')
            console.log(hook.issue.id)
            $("<li>").remove();
        }

        else if(hook.action === 'created'){
            console.log('Bengtsforst!')
            $('<li>hook.issue.id div:last-child p:nth-child[2]').text(hook.issue.comments + "many comments are written");
        }

        else if(hook.action === 'opened' || 'reopened'){
            console.log('Janne!')
            $('#list-issues').append($('<li>').attr("id", hook.issue.id + " list-element"));

            $('#hook.issue.id').append($('<div>').attr('class', "collapsible-header red darken-1 white-text z-depth-5")
                    .append($('<i>').attr('class', 'material-icons').text('whatshot').text(hook.issue.name)));
        }


    });
</script>

