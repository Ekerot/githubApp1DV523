<script type="text/javascript">$(document).ready(function(){
    $('.collapsible').collapsible();});</script>

<script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>

<script>
    var socket = io.connect();

    socket.on('webhook', function(hook){

        if($('<li>[hook.issue.id]')){
            if(hook.action === 'closed') {
                $('#list-issues').remove('<li>[hook.issue.id]');
            }
            $('<li>[hook.issue.id] div:last-child li:nth-child[2]').text(hook.issues.comments + "many comments are written");
        }

        else {

            $('#list-issues').append($('<li>').attr("id", hook.issue.id + " list-element"));

            $('<li>[hook.issue.id]').append($('<div>').attr('class', "collapsible-header red darken-1 white-text z-depth-5").append($('<i>').attr('class', 'material-icons').text('whatshot')).text(hook.issue.name));
        }


    });
</script>

