
<div class="create-container">
    <div class="row">
        {{#if issues }}
            {{#each issues.issues}}
                <div id="{{this.id}}" class="col s12 m6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">{{issues.title}}</span>
                            <p class="body">{{issues.issues.body}}</p>
                            <br>
                            <p class="comments">
                                {{issues.comments}} comments are written</p>
                        </div>
                        <div class="card-action">
                            <a href="{{issues.html_url}}">Link</a>
                            <div class="chip">
                                <img class="round" src="{{issues.avatar_url}}">
                                <span class="card-title">{{this.issues.login}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/if}}
    </div>
</div>